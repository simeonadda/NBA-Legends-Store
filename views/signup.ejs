<%- include('./partials/header.ejs') %>
<br>
<div class="container">
  <div class="row justify-content-around"><br>
    <h1 class="text-light font-weight-bold">NBA Legends Store</h1><br><br><br>
    <div class="col-9 border border-light bg-warning"><br>
      <h3 class="text-center">Sign Up</h3><br>
      <form class="px-4 py-3" action="/users" method="POST">
        <div class="row">
          <div class="form-group col-sm">
            <input type="text" class="form-control" name="username" placeholder="Username" required><br>
            <input type="email" class="form-control" name="email" placeholder="Email" required>
          </div>
          <div class="form-group col-sm">
            <input type="password" class="form-control" name="password" placeholder="Password" required><br>
            <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm password" required>
          </div>
        </div><br><br>
        <div class="text-center">
          <button type="submit" class="btn btn-dark">Sign up</button>
        </div><br>
      </form>
    </div>
  </div>
</div>
