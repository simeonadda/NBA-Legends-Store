<%- include('./partials/header.ejs') %>
<br><br>
<div class="container">
  <div class="row justify-content-around">
    <img class="border border-secondary" src="https://64.media.tumblr.com/2ba2d91776843efcea9b3da24944d878/tumblr_okalp2Hb5b1sdydefo1_r1_400.gif" width="500" alt="">
    <div class="col-sm-3 border border-secondary bg-warning"><br>
      <h3>Login</h3>
      <form class="px-4 py-3" action="/login" method="POST">
        <div class="form-group">
          <label for="exampleDropdownFormEmail1">Email address</label>
          <input type="email" class="form-control" id="exampleDropdownFormEmail1" placeholder="email@example.com" required>
        </div>
        <div class="form-group">
          <label for="exampleDropdownFormPassword1">Password</label>
          <input type="password" class="form-control" id="exampleDropdownFormPassword1" placeholder="Password" required>
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="dropdownCheck">
          <label class="form-check-label" for="dropdownCheck">
            Remember me
          </label>
        </div>
        <button type="submit" class="btn btn-secondary">Sign in</button>
      </form>
      <div class="dropdown-divider bg-secondary"></div>
      <a class="dropdown-item" href="#">New around here? Sign up</a>
      <a class="dropdown-item" href="#">Forgot password?</a><br>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
